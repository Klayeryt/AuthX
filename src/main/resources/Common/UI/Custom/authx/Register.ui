// AuthX Dashboard UI
// Import Common.ui for reusable components
$C = "../Common.ui";

// Custom button styles
@PrimaryButton = TextButtonStyle(
  Default: (Background: #9ACD32, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #2E8B57, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #3CB371, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@SecondaryButton = TextButtonStyle(
  Default: (Background: #FF0000, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #DC143C, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #8B0000, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

// Main container
Group {
  Anchor: (Width: 600, Height: 560);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 20);

  // Title
  Label #ServerName {
    Text: "AuthX";
    Anchor: (Height: 40);
    Style: (FontSize: 24, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
  }

  // Separator
  Group { Anchor: (Height: 1); Background: #2b3542; }
  Group { Anchor: (Height: 90); }

  // Status text
  Label #StatusText {
    Text: "Регистрация пользователя";
    Anchor: (Height: 30);
    Style: (FontSize: 30, TextColor: #96a9be, HorizontalAlignment: Center, RenderBold: true);
  }

  Group { Anchor: (Height: 50); }

  $C.@TextField #Password {
    FlexWeight: 1;
    PlaceholderText: "Введите пароль...";
    Anchor: (Width: 500, Height: 50);
  }

  Group { Anchor: (Height: 40); }

  $C.@TextField #ConfirmPassword {
    FlexWeight: 1;
    Anchor: (Width: 500, Height: 50);
    PlaceholderText: "Подтвердите пароль...";
  }

  Group { Anchor: (Height: 20); }

  Label #Nofication {
    Text: "";
    Anchor: (Height: 15);
    Style: (FontSize: 20, TextColor: #ff0000, HorizontalAlignment: Center);
  }

  Group { Anchor: (Height: 20); }
  // Info section
  Label {
    Text: "Version: 1.0.0 | By Xeno";
    Anchor: (Height: 24);
    Style: (FontSize: 14, TextColor: #6e7da1, HorizontalAlignment: Center);
  }

  // Spacer
  Group { FlexWeight: 1; }

  // Buttons row
  Group {
    LayoutMode: Center;
    Anchor: (Height: 60);

    TextButton #RefreshButton {
      Text: "Зарегестрироваться";
      Anchor: (Width: 150, Height: 55);
      Style: @PrimaryButton;
    }

    Group { Anchor: (Width: 16); }

    TextButton #CloseButton {
      Text: "Отключиться";
      Anchor: (Width: 150, Height: 55);
      Style: @SecondaryButton;
    }
  }

  // Footer
  Group { Anchor: (Height: 15); }
  Label #description {
    Text: "Защита аккаунта";
    Anchor: (Height: 25);
    Style: (FontSize: 12, TextColor: #555555, HorizontalAlignment: Center);
  }
}